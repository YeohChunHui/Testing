<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fitnesscompanion.com.Util.DashedCircularProgress
        custom:external_color="#ff39065a"
        custom:base_color="#260b49"
        custom:min="0"
        custom:max="8000"
        custom:progress_color="@color/abc_primary_text_material_dark"
        custom:progress_icon="@drawable/steps"
        custom:duration="1500"
        custom:progress_stroke_width="96"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="270dp"
        android:layout_height="270dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="10dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:id="@+id/viewsteps"
                android:textColor="@color/black"
                android:text="@string/steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/viewnumber"
                android:paddingTop="10dp"
                android:layout_below="@+id/viewsteps"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/viewpercent"
                android:paddingTop="10dp"
                android:text="65%"
                android:layout_below="@+id/viewnumber"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </fitnesscompanion.com.Util.DashedCircularProgress>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_marginTop="300dp"/>

    <ListView
        android:id="@+id/lvhome"
        android:layout_marginTop="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>
</RelativeLayout>
